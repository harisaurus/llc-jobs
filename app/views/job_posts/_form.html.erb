<%= simple_form_for(@job_post, :url => url) do |f| %>
<%= f.input :title, input_html: { class: 'form-control' } %>
<%= f.input :company, input_html: { class: 'form-control' } %>
<div class="help-block">
    <p>Feel free to use markdown in the description and how to apply. Here are the basics. See the <a href="http://daringfireball.net/projects/markdown/syntax">complete syntax.</a></p>
    <ul>
        <li>Heading: ##Example heading</li>
        <li>List item: *Example list item</li>
        <li>Italic text: _Example italic text_</li>
        <li>Bold text: __Example bold text__</li>
        <li>Link: [Example link](http://example.com)</li>
    </ul>
</div>
<%= f.input :description, input_html: { class: 'form-control' } %>
<%= f.input :how_to_apply, input_html: { class: 'form-control' } %>
<%= f.input :due_date, label: "Expiry Date", default: 30.days.from_now, input_html: { class: 'form-control date-fragment' } %>
<%= f.input :category_id, as: :select, collection: @categories, input_html: { class: 'form-control date-fragment' }  %>
<%= f.input :job_type_id, as: :select, collection: @job_types, input_html: { class: 'form-control date-fragment' }  %>
<%= f.input :tag_list, label: "Tags (separated by commas) - Some examples: html, rails, css3", input_html: { class: 'form-control' } %>
<%= f.input :city, input_html: { class: 'form-control' } %>
<%= f.country_select :country, ['Canada', 'United States'], {}, class: 'form-group form-control date-fragment' %>

<br>

<div class="form-group">
    <%= f.button :submit, class: 'btn btn-primary' %>
</div>
<% end %>
